<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="toolbarStyle">@style/AppThemeToolbar</item>
    </style>

    <style name="ActionBarText">
        <item name="android:textColor">@color/md_white_1000</item>
    </style>
    <style name="AppThemeToolbar" parent="Widget.AppCompat.Toolbar" >
        <item name="contentInsetStart">0dp</item>
    </style>

    <!-- Navigation drawer theme -->
    <style name="NavigationDrawerTheme" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">@color/material_indigo_500</item>
        <item name="colorPrimaryDark">@color/material_indigo_600</item>
        <item name="colorAccent">@color/material_pink_500</item>
        <item name="rippleBackport">true</item>
        <item name="singleAccount">true</item>
    </style>

    <!-- Tab Pager theme -->
    <style name="PagerTabStripTheme">
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="FragmentContainer">
        <item name="android:background">@color/md_white_1000</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="DialogContainer">
        <item name="android:background">@color/md_white_1000</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/container_padding</item>
    </style>

    <style name="DialogContainerMessage" parent="DialogContainer">
        <item name="android:layout_width">@dimen/dialog_message_width</item>
    </style>

    <style name="Component">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="EditComponent" parent="Component">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="ShowComponent" parent="Component">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="SectionDummy">
        <item name="android:layout_height">@dimen/section_dummy_height</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- EditPerson/Event -->
    <style name="EditComponentPicker" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="EditComponentPickerDate" parent="EditComponentPicker">
        <item name="android:text">@string/default_date</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="EditComponentPickerTime" parent="EditComponentPicker">
        <item name="android:text">@string/default_time</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="EditComponentDatepickerContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditComponentSave" parent="EditComponent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/material_pink_500</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="EditComponentText" parent="EditComponent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="EditComponentEdit" parent="EditComponent">
        <item name="android:inputType">textCapSentences</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="EditComponentEditPrimary" parent="EditComponentEdit">
        <item name="android:textSize">@dimen/edit_component_edit_primary</item>
    </style>

    <style name="EditComponentEditSecondary" parent="EditComponentEdit">
        <item name="android:textSize">@dimen/edit_component_edit_secondary</item>
    </style>

    <style name="EditComponentEditSecondaryEmail" parent="EditComponentEditSecondary">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <!-- ShowPerson/Event -->
    <style name="ShowFragmentInnerContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ShowComponentText" parent="ShowComponent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ShowComponentTextPrimary" parent="ShowComponentText">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="ShowComponentTextSecondary" parent="ShowComponentText">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="ShowComponentTextTertiary" parent="ShowComponentText">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="ShowComponentTextPrimaryPerson" parent="ShowComponentTextPrimary">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="ShowComponentTextSecondaryPerson" parent="ShowComponentTextSecondary">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ShowComponentTextPrimaryEvent" parent="ShowComponentTextPrimary">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="ShowComponentTextSecondaryEvent" parent="ShowComponentTextSecondary">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ShowComponentTextTertiaryEvent" parent="ShowComponentTextTertiary">
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">5</item>
    </style>

    <style name="ShowComponentTextHeaderMessage" parent="ShowComponentTextSecondary">
        <item name="android:textSize">@dimen/show_component_header_message</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_width">@dimen/dialog_message_width</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="ShowComponentTextTextMessage" parent="ShowComponentTextPrimary">
        <item name="android:textSize">@dimen/show_component_text_message</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="ShowComponentBanner" parent="ShowComponent">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">180dp</item>
    </style>


    <!-- List item -->
    <style name="ListItemOuterContainer">
        <item name="android:background">@color/md_white_1000</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ListItemInnerContainer">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ListItemAvatar">
        <item name="android:layout_width">@dimen/avatar_thumb</item>
        <item name="android:layout_height">@dimen/avatar_thumb</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ListItemContentContainer">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ListItemTextContainer">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_toLeftOf">@+id/list_item_icon_container</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="ListItemText">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ListItemTextPrimary" parent="ListItemText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="ListItemTextSecondary" parent="ListItemText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ListItemIconContainer">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ListItemIcon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
