<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="toolbarStyle">@style/AppThemeToolbar</item>
    </style>

    <style name="Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="SubTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ActionBarText">
        <item name="android:textColor">@color/md_white_1000</item>
    </style>
    <style name="AppThemeToolbar" parent="Widget.AppCompat.Toolbar" >
        <item name="contentInsetStart">0dp</item>
    </style>

    <!-- Navigation drawer theme -->
    <style name="NavigationDrawerTheme" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">@color/material_indigo_500</item>
        <item name="colorPrimaryDark">@color/material_indigo_600</item>
        <item name="colorAccent">@color/material_pink_500</item>
        <item name="rippleBackport">true</item>
        <item name="singleAccount">true</item>
    </style>

    <!-- Tab Pager theme -->
    <style name="PagerTabStripTheme">
        <!--<item name="android:textSize">14sp</item>-->
        <!--<item name="android:textStyle">bold</item>-->
        <item name="android:background">@color/material_indigo_500</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="Component">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="Form_component" parent="Component">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="Section_Dummy">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="DatePicker" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!-- EditText -->
    <style name="Form_component_editText" parent="Form_component">
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="Form_component_editText_email" parent="Form_component">
    </style>

    <style name="Form_component_editText_message" parent="Form_component">
    </style>

    <style name="Show_component" parent="Component">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- Show Person -->
    <style name="Show_person_component" parent="Show_component">
    </style>

    <style name="Show_person_component_text" parent="Show_person_component">
        <item name="android:maxLines">1</item>
    </style>

    <style name="Show_person_component_text_heading" parent="Show_person_component_text">
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Show_person_component_text_secondary" parent="Show_person_component_text">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Show Event -->
    <style name="Show_event_component" parent="Show_component">
    </style>

    <style name="Show_event_component_text" parent="Show_event_component">
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Show_event_component_description" parent="Show_event_component">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Show_event_component_date" parent="Show_event_component">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- List item -->
    <style name="List_item_container">
        <item name="android:background">@color/md_white_1000</item>
    </style>

    <style name="List_item_avatar">
        <item name="android:layout_width">@dimen/avatar_small</item>
        <item name="android:layout_height">@dimen/avatar_small</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="List_item_content_container">
        <item name="android:paddingRight">16dp</item>
        <item name="android:orientation">horizontal</item>
    </style>



    <style name="List_item_text_container">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="List_item_text">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="List_item_text_primary" parent="List_item_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_normal</item>
    </style>

    <style name="List_item_text_secondary" parent="List_item_text">
        <item name="android:textSize">14sp</item>
    </style>



</resources>
