<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
    </style>

    <style name="CardTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CardTitleMissing" parent="CardTitle">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="CardSubTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CardSubTitleMissing" parent="CardSubTitle">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="NavigationDrawerTheme" parent="MaterialNavigationDrawerTheme">
        <item name="colorPrimary">@color/md_lime_500</item>
        <item name="colorPrimaryDark">@color/md_lime_800</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="rippleBackport">true</item>
        <item name="singleAccount">true</item>
    </style>

</resources>
