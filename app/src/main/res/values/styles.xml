<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="toolbarStyle">@style/AppThemeToolbar</item>
    </style>

    <style name="ActionBarText">
        <item name="android:textColor">@color/md_white_1000</item>
    </style>
    <style name="AppThemeToolbar" parent="Widget.AppCompat.Toolbar" >
        <item name="contentInsetStart">0dp</item>
    </style>

    <!-- Navigation drawer theme -->
    <style name="NavigationDrawerTheme" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">@color/material_indigo_500</item>
        <item name="colorPrimaryDark">@color/material_indigo_600</item>
        <item name="colorAccent">@color/material_pink_500</item>
        <item name="rippleBackport">true</item>
        <item name="singleAccount">true</item>
    </style>

    <!-- Tab Pager theme -->
    <style name="PagerTabStripTheme">
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="Fragment_container">
        <item name="android:background">@color/md_white_1000</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Dialog_container">
        <item name="android:background">@color/md_white_1000</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/container_padding</item>
    </style>

    <style name="Dialog_container_message" parent="Dialog_container">
        <item name="android:layout_width">@dimen/dialog_message_width</item>
    </style>

    <style name="Component">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="Edit_component" parent="Component">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="Show_component" parent="Component">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Section_Dummy">
        <item name="android:layout_height">@dimen/section_dummy_height</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- EditPerson/Event -->
    <style name="Edit_component_picker" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Edit_component_picker_date" parent="Edit_component_picker">
        <item name="android:text">@string/default_date</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Edit_component_picker_time" parent="Edit_component_picker">
        <item name="android:text">@string/default_time</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Edit_component_datepicker_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Edit_component_save" parent="Edit_component">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/material_pink_500</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="Edit_component_text" parent="Edit_component">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Edit_component_edit" parent="Edit_component">
        <item name="android:inputType">textCapSentences</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Edit_component_edit_primary" parent="Edit_component_edit">
        <item name="android:textSize">@dimen/edit_component_edit_primary</item>
    </style>

    <style name="Edit_component_edit_secondary" parent="Edit_component_edit">
        <item name="android:textSize">@dimen/edit_component_edit_secondary</item>
    </style>

    <!-- ShowPerson/Event -->
    <style name="Show_fragment_inner_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Show_component_text" parent="Show_component">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Show_component_text_primary" parent="Show_component_text">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Show_component_text_secondary" parent="Show_component_text">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Show_component_text_tertiary" parent="Show_component_text">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Show_component_text_primary_person" parent="Show_component_text_primary">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Show_component_text_secondary_person" parent="Show_component_text_secondary">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Show_component_text_primary_event" parent="Show_component_text_primary">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Show_component_text_secondary_event" parent="Show_component_text_secondary">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Show_component_text_tertiary_event" parent="Show_component_text_tertiary">
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">5</item>
    </style>

    <style name="Show_component_text_header_message" parent="Show_component_text_secondary">
        <item name="android:textSize">@dimen/show_component_header_message</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_width">@dimen/dialog_message_width</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="Show_component_text_text_message" parent="Show_component_text_primary">
        <item name="android:textSize">@dimen/show_component_text_message</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="Show_component_banner" parent="Show_component">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">180dp</item>
    </style>


    <!-- List item -->
    <style name="List_item_outer_container">
        <item name="android:background">@color/md_white_1000</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="List_item_inner_container">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="List_item_avatar">
        <item name="android:layout_width">@dimen/avatar_small</item>
        <item name="android:layout_height">@dimen/avatar_small</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="List_item_content_container">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="List_item_text_container">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_toLeftOf">@+id/list_item_icon_container</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="List_item_text">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="List_item_text_primary" parent="List_item_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="List_item_text_secondary" parent="List_item_text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="List_item_icon_container">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="List_item_icon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
