<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
    </style>

    <!-- Card themes -->

    <style name="Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TitleMissing" parent="Title">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="SubTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SubTitleMissing" parent="SubTitle">
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Navigation drawer theme -->
    <style name="NavigationDrawerTheme" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">@color/md_light_green</item>
        <item name="colorPrimaryDark">@color/md_light_green_800</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="rippleBackport">true</item>
        <item name="singleAccount">true</item>
    </style>

</resources>
