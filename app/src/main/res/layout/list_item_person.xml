<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_container"
    style="@style/List_item_outer_container">

        <LinearLayout
            style="@style/List_item_inner_container">

            <ImageView android:id="@+id/person_list_view_avatar"
                android:transitionName="avatar"
                style="@style/List_item_avatar"/>

            <RelativeLayout
                style="@style/List_item_content_container">

                <LinearLayout
                    style="@style/List_item_text_container">

                    <TextView
                        android:id="@+id/person_list_view_name"
                        style="@style/List_item_text_primary"/>

                    <TextView
                        android:id="@+id/person_list_view_email"
                        style="@style/List_item_text_secondary"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/list_item_icon_container"
                    style="@style/List_item_icon_container">

                    <ImageView
                        android:id="@+id/list_item_icon"
                        android:src="@drawable/ic_person_grey"
                        style="@style/List_item_icon"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

</LinearLayout>