<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="be.thalarion.eventman.fragments.event.EventTab"
    style="@style/Fragment_container">

        <LinearLayout
            style="@style/Showfragment_inner_container">

            <ImageView
                android:id="@+id/event_banner"
                style="@style/Show_component_banner"/>

            <LinearLayout android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/event_title"
                    style="@style/Show_component_text_primary_event" />

                <TextView
                    android:id="@+id/event_description"
                    style="@style/Show_component_text_tertiary_event" />

                <TextView
                    style="@style/Section_Dummy"/>

                <TextView
                    android:id="@+id/event_startdate"
                    style="@style/Show_component_text_secondary_event"/>

                <TextView
                    android:id="@+id/event_enddate"
                    style="@style/Show_component_text_secondary_event"/>

            </LinearLayout>

        </LinearLayout>

</FrameLayout>
