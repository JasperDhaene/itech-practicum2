<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="72dp"
    android:id="@+id/list_item_container">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView android:id="@+id/message_list_view_avatar"
            android:transitionName="avatar"
            style="@style/List_item_avatar"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/List_item_content_container">

            <LinearLayout android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/list_item_icon"
                android:layout_alignParentLeft="true"
                style="@style/List_item_text_container">

                <TextView
                    android:id="@+id/message_list_view_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/List_item_text_primary"/>

                <TextView
                    android:id="@+id/message_list_view_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/List_item_text_secondary"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/list_item_icon_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/list_item_icon_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_edit_grey"/>


                <ImageView
                    android:id="@+id/list_item_icon_discard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_discard_grey"
                    android:clickable="true"/>


            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>