<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_container"
    style="@style/ListItemOuterContainer">

    <LinearLayout
        style="@style/ListItemInnerContainer">

        <ImageView android:id="@+id/message_list_view_avatar"
            android:transitionName="avatar"
            style="@style/ListItemAvatar"/>

        <RelativeLayout
            style="@style/ListItemContentContainer">

            <LinearLayout
                style="@style/ListItemTextContainer">

                <TextView
                    android:id="@+id/message_list_view_text"
                    style="@style/ListItemTextPrimary"/>

                <TextView
                    android:id="@+id/message_list_view_date"
                    style="@style/ListItemTextSecondary"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/list_item_icon_container"
                style="@style/ListItemIconContainer">

                <ImageView
                    android:id="@+id/list_item_icon_edit"
                    android:src="@drawable/ic_action_edit_grey"
                    style="@style/ListItemIcon"/>


                <ImageView
                    android:id="@+id/list_item_icon_discard"
                    android:src="@drawable/ic_action_discard_grey"
                    style="@style/ListItemIcon"/>


            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>