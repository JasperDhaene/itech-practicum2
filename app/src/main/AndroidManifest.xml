<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="be.thalarion.eventman" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShowPersonActivity"
            android:label="@string/title_activity_show_person" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="be.thalarion.eventman.MainActivity" />
        </activity>
        <activity
            android:name=".EditPersonActivity"
            android:label="@string/title_activity_edit_person" >
        </activity>
        <activity
            android:name=".ShowEventActivity"
            android:label="@string/title_activity_show_event"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="be.thalarion.eventman.MainActivity" />
        </activity>
        <activity
            android:name=".EditEventActivity"
            android:label="@string/title_activity_edit_event"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="be.thalarion.eventman.MainActivity" />
        </activity>
        <activity
            android:name="NavigationDrawer"
            android:theme="@style/NavigationDrawerTheme" />
    </application>

</manifest>
